@using MVCWeb.UI
@using MVCWeb.UI.Controllers
@using MVCWeb.UI.Models.UserDetail

@inherits ViewBase<List>

<div class="grid">
    <table border="2px" >
        <thead>
            <tr>

                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in @Model.Users)
            {
                <tr>
                    <td>
                        @user.Id
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.FirstName
                    </td>
                    <td>
                        @user.LastName
                    </td>
                    <td style="border: 2px">
                        <a 
                            data-toggle="modal"
                            data-target="#myModal">
                            <div style="display: inline-block;width: 30px">
                                <span style="width: 5px">1</span>
                                <span style="word-wrap: break-word">431316513513133</span>
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @{ Html.RenderAction<GridToolbarController>(a => a.Index(Grid.GridInfo)); }
</div>